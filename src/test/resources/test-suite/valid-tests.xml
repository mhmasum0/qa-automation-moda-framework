<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Valid Test Suite">
    <parameter name="browser" value="chrome" />
    <listeners>
        <listener class-name="com.moda.listeners.TestListener"/>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.TestHTMLReporter"/>
        <listener class-name="com.moda.listeners.EmailReporter"/>
    </listeners>

    <test verbose="2" name="Moda360 and BH360 Programs Test">
        <classes>
            <class name="com.moda.testcase.Moda360ProgramsTestCase">
                <methods>
                    <include name="validLoginTest"/>
                    <include name="Moda360ProgramsPage"/>
                </methods>
            </class>
            <class name="com.moda.testcase.BehavioralHealth360TestCase">
                <methods>
                    <exclude name="validLoginTest"/>
                    <include name="BehavioralHealth360"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
