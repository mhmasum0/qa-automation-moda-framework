<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test" parallel="tests" thread-count="2">
    <parameter name="browser" value="chrome" />
    <listeners>
        <listener class-name="com.moda.listeners.TestListener"/>
    </listeners>
    <test name="Moda Test" >
        <classes>
            <class name="com.moda.testcase.Moda360ProgramsTestCase">
                <methods>
                    <include name="validLoginTest"/>
                    <include name="Moda360ProgramsPage"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="BH360 Test">
        <classes>
            <class name="com.moda.testcase.BehavioralHealth360TestCase">
                <methods>
                    <include name="validLoginTest"/>
                    <include name="BehavioralHealth360"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="PCP BH360 Eligibility Test">
        <classes>
            <class name="com.moda.testcase.PCPBH360EligibilityTestCase">
                <methods>
                    <include name="userEligibilityTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>