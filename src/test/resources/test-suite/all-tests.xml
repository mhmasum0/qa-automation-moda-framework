<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <parameter name="browser" value="chrome" />
    <listeners>
        <listener class-name="com.moda.listeners.TestListener"/>
        <listener class-name="org.testng.reporters.EmailableReporter2"/>
        <listener class-name="org.testng.reporters.TestHTMLReporter"/>
        <listener class-name="com.moda.listeners.EmailReporter"/>
    </listeners>

    <test name="All the test">
        <classes>
            <class name="com.moda.Moda360ProgramsTestCase">
                <methods>
                    <include name="validLoginTest"/>
                    <include name="Moda360ProgramsPage"/>
                </methods>
            </class>
            <class name="com.moda.BehavioralHealth360TestCase">
                <methods>
                    <exclude name="validLoginTest"/>
                    <include name="BehavioralHealth360"/>
                </methods>
            </class>
            <class name="com.moda.VerifyBH360UserTestCase"/>
            <class name="com.moda.PCPBH360EligibilityTestCase"/>
        </classes>
    </test>
</suite>
